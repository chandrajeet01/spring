<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- The ViewResolver meant for resolving the View to used for rendering 
		the outcome data that means it identify the corresponding View class and 
		returns the corresponding class object -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<bean id="controller" class="com.fmvcw.controller.ViewHomeController">
		<property name="logicalViewName" value="home" />
	</bean>

	<!-- SimpleUrlHandlerMapping takes request URL as input and gives controller 
		bean-id as output so that DispatcherServlet takes out the corresponding object 
		of controllers's bean id. We can map multiple request URL to respective controller's 
		bean-id -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/home.mvc">controller</prop>
			</props>
		</property>
	</bean>



	<!-- In another XML 'application-context.xml' there will be configuration 
		for 'Service' & 'DAO' classes as <bean> -->
</beans>
